@model MusicPlayer.Models.Song
@{
    ViewData["Title"] = "Create";
}

<h1>Add Song</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Artist" class="control-label"></label>
                <select asp-for="ArtistID" asp-items="@ViewBag.ArtistsViewBag" class="form-control">
                    <option value="0">Select An Artist</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Artist.FirstName" class="control-label"></label>
                <input asp-for="Artist.FirstName" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="Artist.LastName" class="control-label"></label>
                <input asp-for="Artist.LastName" class="form-control" />

            </div>

            <div class="form-group">
                <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Back</a>
                <input type="submit" value="Create" class="btn btn-primary float-right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
